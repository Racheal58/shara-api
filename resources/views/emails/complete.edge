<!DOCTYPE html>
  <html>
    <head>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
      <title>Shara E-Commerce</title>
    </head>
    <body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0" style="margin: 0pt; padding: 0px; background:#F4F7FA;">
      <table id="main" width="100%" height="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#FFFFFF">
        <tbody>
          <tr>
            <td valign="top">
              <table cellpadding="0" width="600" cellspacing="0" border="0" bgcolor="#14054d" align="center"
                style="margin:0 auto; table-layout: fixed;">
                <tbody>
                  <tr>
                    <td colspan="4">
                      <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#FFFFFF" style="box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                        <tbody>
                          <tr style="font-family: -apple-system,BlinkMacSystemFont,Segoe UI; color:#4E5C6E; font-size:14px; line-height:20px; margin-top:20px;">
                            <td class="content" colspan="2" valign="top" align="center" style="padding-top: 0">
                              <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#ffffff">
                                <tbody>
                                  <tr>
                                    <td align="center" bgcolor="#14054d" style="padding: 20px 10px 20px;">
                                      <span style="color:#ffffff; font-size:24px; line-height: 29px;">
                                        Shara E-Commerce
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td align="left" bgcolor="#FFFFFF" style="padding: 10px 20px 0; max-width:400px">
                                      <span style="color:#000; font-size: 18px; line-height:32px">
                                        Dear Customer,
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td bgcolor="#FFFFFF" style="padding: 0 18px 10px; max-width:400px">
                                      <span style="color:#14054d; font-size: 14px; line-height:48px">
                                        Your order has been completed.
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <tr>
                                      <td width="100%" align="center" bgcolor="#FFFFFF" style="padding: 5px 18px 10px;">
                                        <table width="100%" border="1" cellspacing="0" style="border-collapse: collapse;" >
                                          <tr>
                                            <th align="left" style="padding: 5px; text-transform: capitalize;">
                                              ITEM
                                            </th>
                                            <th align="left" style="padding: 5px; text-transform: capitalize;">
                                              ITEM
                                            </th>
                                            <th align="right" style="padding: 5px; text-transform: capitalize;">
                                              QUANTITY
                                            </th>
                                            <th align="right" style="padding: 5px; text-transform: capitalize;">
                                              PRICE
                                            </th>
                                          </tr>
                                          @each(product in order.products)
                                            <tr>
                                              <td align="left" style="padding: 5px; text-transform: capitalize;">
                                                <img alt="summary icon" style="display:block; width: 100px; height: 100px" src={{ product.imageUrl }} />
                                              </td>
                                              <td>
                                              <p style="text-align: center; font-size: 12px;">{{ product.name }}</p>
                                              </td>
                                              <td align="right" style="padding: 5px;">
                                                {{ product.quantity }}
                                              </td>
                                              <td align="right" style="padding: 5px;">
                                                â‚¦ {{ product.price }}
                                              </td>
                                            </tr>
                                          @endeach
                                        </table>
                                      </td>
                                    </tr>
                                  </tr>
                                </tbody>
                              </table>
                            </td>
                          </tr>
                          <tr width="100%" style="font-family: -apple-system,BlinkMacSystemFont,Segoe UI;">
                            <td width="100%" align="left" bgcolor="#FFFFFF" style="padding: 10px 18px 10px;">
                              <span style="color:#4E5C6E;font-size:12px; line-height: 16px;">
                                This email was sent to you from Share E-commerce.
                              </span>
                            </td>
                          </tr>
                          <tr style="background-color: #221100">
                            <td valign="center" align="center"  width="100%" height="50">
                              <span style="font-family: -apple-system,BlinkMacSystemFont,sans-serif; color:#FFFFFF; font-size:10px;">
                                Share E-commerce Team
                              </span>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                </tbody>
              </table>
            </td>
          </tr>
        </tbody>
      </table>
    </body>
  </html>
